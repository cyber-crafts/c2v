{
  "name": "c2v",
  "version": "1.3.0",
  "description": "modular, extensible, intuitive and expressive - javascript validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyber-crafts/validate.git"
  },
  "main": "./lib/index",
  "typings": "./lib/index",
  "license": "MIT",
  "scripts": {
    "test": "jest --watch --coverage --config=jest.config.js",
    "test:staged": "./node_modules/.bin/jest --forceExit",
    "lib:generate": "rm -rf ./lib/* && yarn build && git add ./lib/**",
    "build": "tsc --build",
    "lint": "tslint -p tslint.json",
    "start": "tsc --watch"
  },
  "pre-commit": [
    "lint",
    "lib:generate",
    "test:staged"
  ],
  "dependencies": {
    "json-pointer": "^0.6.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "moment": "^2.22.2"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/json-pointer": "^1.0.30",
    "@types/lodash.clonedeep": "^4.5.6",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^9.6.4",
    "jest": "^29.1.1",
    "pre-commit": "^1.2.2",
    "ts-jest": "^29.0.2",
    "typescript": "^4.8.4"
  },
  "keywords": [
    "validation",
    "async",
    "reusable",
    "intuitive",
    "conditional validation",
    "typescript",
    "javascript",
    "expressive",
    "cyber crafts"
  ]
}
